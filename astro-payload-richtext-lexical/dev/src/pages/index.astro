<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RichTextLexical Demo</title>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        line-height: 1.6;
      }
      h1,
      h2,
      h3 {
        color: #333;
      }
      blockquote {
        border-left: 4px solid #ddd;
        margin: 1rem 0;
        padding-left: 1rem;
        color: #666;
      }
      a {
        color: #0066cc;
      }
      code {
        background: #f4f4f4;
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-family: monospace;
      }
      hr {
        border: none;
        border-top: 1px solid #ddd;
        margin: 2rem 0;
      }
      ul,
      ol {
        padding-left: 2rem;
      }
      .custom-upload {
        border: 2px dashed #ccc;
        padding: 1rem;
        margin: 1rem 0;
        border-radius: 8px;
      }
      .custom-block {
        background: #f0f7ff;
        border: 1px solid #0066cc;
        padding: 1rem;
        margin: 1rem 0;
        border-radius: 8px;
      }
    </style>
  </head>
  <body>
    <RichTextLexical
      nodes={sampleLexicalContent.root.children}
      UploadRenderer={CustomUpload}
      BlockRenderer={CustomBlock}
    />
  </body>
</html>
