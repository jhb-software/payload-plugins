{
  "name": "@jhb.software/payload-alt-text-plugin",
  "version": "0.1.0",
  "description": "A minimal Payload CMS plugin to generate image alt texts using OpenAI's Vision API.",
  "bugs": "https://github.com/jhb-software/payload-plugins/issues",
  "repository": "https://github.com/jhb-software/payload-plugins",
  "keywords": [
    "payload",
    "plugin",
    "alt-text",
    "accessibility",
    "ai"
  ],
  "author": "JHB Software",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --outDir dist --rootDir ./src",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "clean": "rimraf --glob {dist,*.tsbuildinfo}",
    "dev": "tsc -w",
    "format": "prettier --write src",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "openai": "^6.6.0",
    "p-map": "^7.0.3",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "@payloadcms/ui": "^3.60.0",
    "next": "15.5.6",
    "payload": "^3.60.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "copyfiles": "2.4.1",
    "prettier": "^3.6.2",
    "rimraf": "6.0.1",
    "typescript": "5.9.3"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./client": {
        "import": "./dist/exports/client.js",
        "types": "./dist/exports/client.d.ts",
        "default": "./dist/exports/client.js"
      },
      "./server": {
        "import": "./dist/exports/server.js",
        "types": "./dist/exports/server.d.ts",
        "default": "./dist/exports/server.js"
      }
    }
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "import": "./src/exports/client.ts",
      "types": "./src/exports/client.ts",
      "default": "./src/exports/client.ts"
    },
    "./server": {
      "import": "./src/exports/server.ts",
      "types": "./src/exports/server.ts",
      "default": "./src/exports/server.ts"
    }
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
