{
  "name": "@jhb.software/payload-alt-text-plugin",
  "version": "0.3.0",
  "description": "A Payload CMS plugin that adds AI-powered alt text generation for images.",
  "bugs": "https://github.com/jhb-software/payload-plugins/issues",
  "repository": "https://github.com/jhb-software/payload-plugins",
  "keywords": [
    "payload",
    "plugin",
    "alt-text",
    "accessibility",
    "ai"
  ],
  "author": "JHB Software",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --outDir dist --rootDir ./src",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "clean": "rimraf --glob {dist,*.tsbuildinfo}",
    "dev": "tsc -w",
    "format": "prettier --write src",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "openai": "^6.10.0",
    "p-map": "^7.0.4",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "@payloadcms/ui": "^3.67.0",
    "next": "15.5.6",
    "payload": "^3.67.0",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@payloadcms/eslint-config": "^3.28.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "copyfiles": "2.4.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "rimraf": "6.1.2",
    "typescript": "5.9.3"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./client": {
        "import": "./dist/exports/client.js",
        "types": "./dist/exports/client.d.ts",
        "default": "./dist/exports/client.js"
      },
      "./server": {
        "import": "./dist/exports/server.js",
        "types": "./dist/exports/server.d.ts",
        "default": "./dist/exports/server.js"
      }
    }
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "import": "./src/exports/client.ts",
      "types": "./src/exports/client.ts",
      "default": "./src/exports/client.ts"
    },
    "./server": {
      "import": "./src/exports/server.ts",
      "types": "./src/exports/server.ts",
      "default": "./src/exports/server.ts"
    }
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
