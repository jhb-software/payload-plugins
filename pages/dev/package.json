{
  "name": "pages-plugin-localized-test-app",
  "description": "A test app for the pages plugin with localized pages",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev",
    "devturbo": "pnpm dev --turbo",
    "devsafe": "rm -rf .next && pnpm dev",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "format": "prettier --write src",
    "payload": "payload",
    "generate:types": "cross-env PAYLOAD_DATABASE=mongodb payload generate:types",
    "generate:schema": "payload-graphql generate:schema",
    "generate:importmap": "payload generate:importmap",
    "test": "pnpm test:mongodb && pnpm test:sqlite",
    "test:mongodb": "cross-env PAYLOAD_DATABASE=mongodb vitest run",
    "test:sqlite": "cross-env PAYLOAD_DATABASE=sqlite vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@jhb.software/payload-pages-plugin": "workspace:*",
    "@payloadcms/db-mongodb": "^3.68.3",
    "@payloadcms/db-sqlite": "^3.68.3",
    "@payloadcms/next": "^3.68.3",
    "@payloadcms/translations": "^3.68.3",
    "@payloadcms/ui": "^3.68.3",
    "next": "15.5.9",
    "payload": "^3.68.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
