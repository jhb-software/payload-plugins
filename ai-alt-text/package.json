{
  "name": "@jhb.software/payload-ai-alt-text-plugin",
  "version": "0.1.0",
  "description": "AI-powered alt text generation plugin for Payload CMS using OpenAI Vision API",
  "keywords": ["payload", "plugin", "ai", "alt-text", "accessibility", "openai"],
  "author": "JHB Software",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "bugs": "https://github.com/jhb-software/payload-plugins/issues",
  "repository": "https://github.com/jhb-software/payload-plugins",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --outDir dist --rootDir ./src",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "clean": "rimraf --glob {dist,*.tsbuildinfo}",
    "dev": "tsc -w",
    "format": "prettier --write src",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "openai": "^5.9.1",
    "zod": "^3.24.1",
    "p-map": "^7.0.3"
  },
  "peerDependencies": {
    "@payloadcms/ui": "^3.27.0",
    "next": "15.2.1",
    "payload": "^3.27.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "copyfiles": "2.4.1",
    "prettier": "^3.6.2",
    "rimraf": "6.0.1",
    "typescript": "5.8.2"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "import": "./src/exports/client.ts",
      "types": "./src/exports/client.ts",
      "default": "./src/exports/client.ts"
    }
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts",
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./client": {
        "import": "./dist/exports/client.js",
        "types": "./dist/exports/client.d.ts",
        "default": "./dist/exports/client.js"
      }
    }
  }
}
