{
  "name": "@jhb.software/payload-ai-alt-text-plugin",
  "version": "0.1.0",
  "description": "AI-powered alt text generation plugin for Payload CMS using OpenAI Vision API",
  "keywords": [
    "payload",
    "plugin",
    "ai",
    "alt-text",
    "accessibility",
    "openai"
  ],
  "author": "JHB Software",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "bugs": "https://github.com/jhb-software/payload-plugins/issues",
  "repository": "https://github.com/jhb-software/payload-plugins",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:all": "pnpm build && pnpm -C dev build",
    "build:app": "pnpm -C dev build",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "dev": "pnpm -C dev dev",
    "format": "prettier --write src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "pnpm prepublishOnly",
    "prepublishOnly": "pnpm build && pnpm copyfiles",
    "test": "pnpm -C dev test",
    "test:watch": "pnpm -C dev test:watch"
  },
  "dependencies": {
    "openai": "^5.9.1",
    "p-map": "^7.0.3",
    "zod": "^4.0.5"
  },
  "peerDependencies": {
    "@payloadcms/ui": "^3.27.0",
    "next": "15.2.1",
    "payload": "^3.27.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "copyfiles": "^2.4.1",
    "prettier": "^3.6.2",
    "typescript": "5.9.3"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "import": "./src/exports/client.ts",
      "types": "./src/exports/client.ts",
      "default": "./src/exports/client.ts"
    }
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts",
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./client": {
        "import": "./dist/exports/client.js",
        "types": "./dist/exports/client.d.ts",
        "default": "./dist/exports/client.js"
      }
    }
  }
}
